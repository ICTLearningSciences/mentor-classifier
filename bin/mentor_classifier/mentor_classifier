#!/usr/bin/env bash

BIN="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

CMD=$1
shift

ARGS=""
case ${CMD} in
    'checkpoint-test' )
        ARGS="--entrypoint /app/bin/checkpoint_test.py $@"
        ;;
    'checkpoint-train' )
        ARGS="--entrypoint /app/bin/checkpoint_train.py $@"
        ;;
    * )
        echo "unknown command ${CMD}"
        exit 1
        ;;
esac


${BIN}/mentor_classifier_run $ARGS